    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Mocha Tests",
            "runtimeExecutable": "${workspaceFolder}/node_modules/.bin/mocha",
            "runtimeArgs": [
                "test/command-line.js",
                "-g",
                "should only allow one client per one server"
            ],
            "internalConsoleOptions": "openOnSessionStart"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Client",
            "program": "${workspaceFolder}/src/index.js",
            "args": [
                "sync",
                "--folder",
                "../quantum-source"
            ]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Server",
            "program": "${workspaceFolder}/src/index.js",
            "args": [
                "serve",
                "--folder",
                "../quantum-target"
            ]
        }
    ]
}
